# EditorConfig is awesome: https://EditorConfig.org

root = true

[*.{py,md}]:
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
